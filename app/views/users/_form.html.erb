<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
            <%= f.label :name, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :name, class: "form-control", placeholder: "Full name" %>
            </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :email, class: "form-control", placeholder: "Email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :address, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :address, rows: 10, class: "form-control", placeholder: "Permanent Address" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %> 
        </div>
      <% end %>
      <div class="pb-5">
        <%= link_to '[ Return to User Listing ]', users_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>