<h1 class="text-center mt-4"><%= @user.name %></h1>
<div class="container">
	<div class="row justify-content-md-center">
		<div class="col-8 mt-4">
			<div class="card text-center shadow mb-5 bg-white rounded">
			  <div class="card-header font-italic">
			    Added by Aman Kumar
			  </div>
			  <div class="card-body">
			    <h5 class="card-title"><%= @user.email %></h5>
			    <div class="card-text"><%= simple_format(@user.address) %></div>
			    <%= link_to	"Edit", edit_user_path(@user), class: "btn btn-info" %>
			    <%= link_to	"Delete", user_path(@user), method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-danger" %>
			  </div>
			  <div class="card-footer text-muted">
			    <small>created <%= time_ago_in_words(@user.created_at) %> ago, edited <%= time_ago_in_words(@user.updated_at) %> ago</small>
			  </div>
			</div>
		</div>
	</div>
</div>